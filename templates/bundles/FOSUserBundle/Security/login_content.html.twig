{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="d-flex flex-column">
    <div class="center">
        <img class="login-logo" src="{{ asset('build/images/logo.png') }}" alt="">
    </div>
    <div>
        <div class="d-flex login-tags justify-content-between">
            <p class="sign-in-tag">Sign in</p>
            <a href="{{ path('fos_user_registration_register') }}" class="link-greyed-out ">Register</a>
        </div>

        <div class="arrow-up-login"></div>
        <form class="login-form mt-0" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}
            <div class="form-group ml-4">
                <input placeholder="username" class="form-control login-input" type="text" id="username" name="_username" value="{{ last_username }}"
                       required="required"
                       autocomplete="username"/>
            </div>

            <div class="form-group ml-4">
                <input placeholder="password" class="form-control login-input" type="password" id="password" name="_password" required="required"
                       autocomplete="current-password"/>
            </div>

            <input class="btn btn-primary sign-in-button" type="submit" id="_submit" name="_submit"
                   value="{{ 'security.login.submit'|trans }}"/>

            <div class="forgot-link mt-3">Forgot password?</div>
            <div class="register-p">Don't have an account? <a href="{{ path('fos_user_registration_register') }}" class="register-link">Click here to register!</a></div>
        </form>

    </div>
</div>